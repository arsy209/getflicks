<div class="container" >
  <h1>Welcome to Getflix!</h1>
  <h2>Search by genre:</h2>
  <%= form_tag("/", method: "get") do %>
    <%= label_tag(:genre, "Search for:") %>
    <%= text_field_tag(:genre) %>
    <p class="waves-effect waves-light white-text btn indigo lighten-1"><%= submit_tag("Search") %></p>
  <% end %>

  <% if @movies.any? %>
    <h2>Here is a list of movies:</h2>
    <div class="carousel">
    <% @movies.each do |movie| %>
      <ul>
        <li><%= link_to image_tag(movie.poster), movie_path(movie), class: "carousel-item" %></li>
      </ul>
    <% end %>
    </div>
  <% end %>
  <p class="paginated-links"><%= will_paginate %></p>
</div>
