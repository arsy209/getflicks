<div class="container">
  <h2>Create an Account</h2>

  <% if @errors %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@errors.count, "error") %> prohibited account creation:
      </h2>
      <ul>
        <% @errors.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for :user, url: users_path do |f| %>
    <p>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </p>
    <p>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>
