<div class="container">
  <h2><%= @user.username %></h2>
  <% if @user.favorite_movies.any? %>
    <h3>Favorite movies:</h3>
    <ul>
      <% @user.favorite_movies.each do |movie| %>
        <li><%= link_to "#{movie.title}", movie_path(movie) %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class = "container">
  <h3>Movies Reviewed:</h3>
  <% if @user.reviews.each do |review| %>
    <p><%= link_to "#{review.movie.title}", movie_path(review.movie) %></p>
    <p><span><%= review.rating %> </span> | <%= review.comment %></p>
    <% end %>
  <% end %>
</div>
