<div class="container">
  <h2>New Review</h2>
  <%= form_for @review, url: movie_reviews_path(@movie) do |f| %>
    <p>
      <%= f.label :rating %>
      <%= f.text_field :rating %>
    </p>
    <p>
      <%= f.label :comment %>
      <%= f.text_area :comment %>
    </p>
    <p>
      <%= f.submit "Add review" %>
    </p>
  <% end %>
</div>
