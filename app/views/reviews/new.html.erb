<div class="container">
  <h2>New Review</h2>

  <% if @errors %>
    <div id="error_explanation">
      <p>
        <strong><%= pluralize(@errors.count, "error") %> prohibited this review from being saved:</strong>
      </p>
      <ul>
        <% @errors.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for @review, url: movie_reviews_path(@movie) do |f| %>
    <p>
      <%= f.label :rating %>
      <%= f.text_field :rating %>
    </p>
    <p>
      <%= f.label :comment %>
      <%= f.text_area :comment %>
    </p>
    <p class="waves-effect waves-light white-text btn indigo lighten-1">
      <%= f.submit "Add review" %>
    </p>
  <% end %>
</div>
